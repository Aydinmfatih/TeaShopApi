@model UpdateQuestionDto
@{
    ViewData["Title"] = "UpdateQuestion";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h1>Soru CEvap Güncelleme Sayfası</h1>


<form method="post">
    <input type="hidden" asp-for="QuestionId" />
    <label>Soruyu Yazınız</label>
    <input type="text" asp-for="QuestionDetail" class="form-control" />
    <br />
    <label>Cevabı yazınız</label>
    <input type="text" asp-for="AnswerDetail" class="form-control" />
    <br />
    <button class="btn btn-primary">Soruyu Güncelle</button>
</form>